<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateClienteActivity4">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registra un nuevo Cliente"
            android:textSize="30dp"
            android:layout_gravity="center"
            android:padding="25dp"
            android:gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingrese el nombre del cliente:"
            android:textSize="22dp"
            android:layout_margin="10dp"/>
        <EditText
            android:id="@+id/namec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre"
            android:textSize="35dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingrese el apellido del cliente:"
            android:textSize="22dp"
            android:layout_margin="10dp"/>
        <EditText
            android:id="@+id/apec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Apellido"
            android:textSize="35dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Numero Telefonico:"
            android:textSize="22dp"
            android:layout_margin="10dp"/>
        <EditText
            android:id="@+id/numc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Numero"
            android:textSize="35dp"
            android:inputType="phone"/>



        <Button
            android:id="@+id/btagregar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="22dp"
            android:text="Agregar"
            android:textSize="40dp"

            />
        <TextView
            android:id="@+id/terror"
            android:layout_width="match_parent"
            android:layout_height ="wrap_content"

            android:textColor="@color/white"
            android:textSize="22dp"
            android:layout_margin="10dp"

            />

    </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>