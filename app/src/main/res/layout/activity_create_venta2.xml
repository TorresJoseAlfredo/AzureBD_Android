<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateVentaActivity2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registra un nuevo Cliente"
            android:textSize="40dp"
            android:gravity="center"
            android:padding="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingrese el nombre del cliente:"
            android:textSize="25dp"
            android:layout_margin="10dp"/>
        <EditText
            android:id="@+id/edtxtsecondcliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre"
            android:textSize="50dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingrese el apellido del cliente:"
            android:textSize="25dp"
            android:layout_margin="10dp"/>
        <EditText
            android:id="@+id/edtxtnamecliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Apellido"
            android:textSize="50dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Numero Telefonico:"
            android:textSize="25dp"
            android:layout_margin="10dp"/>
        <EditText
            android:id="@+id/edtxtcliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Numero"
            android:textSize="50dp"
            android:inputType="phone"/>



        <Button
            android:id="@+id/btagregar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Agregar"
            android:textSize="40dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>